{% import 'homeplanet/macro/commun.twig' as commun %}
<div class="card small text-left">
<div class="card-header bg-aspect-{{ o.tailRequire.type|default('') }}">
	<div class="row justify-content-between">
		<strong class="col col-auto">{{ o.label|capitalize }}</strong>
	</div>
</div>
<div class="container-fluid">
	<div class="row">
	<div class="col-12 text-center">
		<span class="bg-dark rounded-circle medal-debate border-aspect-{{ o.tailRequire.type|default('') }}">
			{{ o.addDebate.value|default('&empty;')|raw }}
		</span>
	</div>
{#
	<div class="col-12">
		<div class="float-right">
		{% if o.requirement() == null %}
			<span class="text-muted lead">&empty;</span>
		{% else %}
			{{ printo( o.requirement(), { 
				context: param.context|default(null),
			} ) }}
		{% endif %}
		</div>
	</div>
#}
	<div class="col-3"></div>
	<div class="col-6 p-0">
		<img class="img-fluid" src="http://scmapdb.wdfiles.com/local--resized-images/wad:developer-textures/dev_256_gr_032x.jpg/small.jpg" />
	</div>
	<div class="col-3"></div>
	<div class="col-12">
		<p>{{ o.description }}</p>
		{% for effect in o.effectAr %}
			{{ printo(effect) }}<br/>
		{% endfor %}
	</div>
	<div class="w-100"></div>
	{% if o.tailModifier != null %}
	{% for type in o.tailModifier.typeAr %}
	<div class="col {{ param.oTurnLog is defined and param.oTurnLog.tailCountered( param.iCharIndex ) ? 'countered' }}">
		<div class=" py-2 bg-aspect-{{type}}"></div>
	</div>
	{% endfor %}
	{% endif %}
	</div>
	</div>
</div>

