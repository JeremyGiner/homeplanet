{% extends 'page/index.html.twig' %}
{% import 'homeplanet/macro/commun.twig' as commun %}

{% block post_navbar %}

<div class="container-fluid">
<nav 
	id="{{ HTMLid|default('') }}" 
	class="navbar navbar-default {{ HTMLclass|default('') }}"
>
	<div class="navbar-header pull-left">
		<ul class="nav navbar-nav">
			{% set linkAr = [
				{ route: 'overview', label: 'Overview' },
				{ route: 'asset', label: 'Asset' },
				{ route: 'map_overview', label: 'Map' },
			] %}
			{% for item in linkAr %}
			<li class="{{ item.route == route_current ? 'active' }} {{ item.HTMLClass|default('') }}">
				<a href="{{ item.route=='' ? '#' : path( item.route ) }}">
					{{ item.label }}
				</a>
			</li>
			{% endfor %}
		</ul>
	</div>
	<div class="navbar-header pull-right">
		<ul class="nav navbar-nav">
			<li>
				<p class="navbar-text">
					Contract : {{ gameview.player.ext.contract }} / {{ gameview.player.contractMax }}
					<span class="icon ress-sprite ress-sprite-8-4"></span>
				</p>
			</li>
			<li>
				<p class="navbar-text">
					Credit : {{ commun.credit( gameview.player.credit ) }}
					<span title="Income">
					 ( {{plus(gameview.player.income)}}{{ commun.credit( gameview.player.income ) }} )
					</span>
				</p>
			</li>
			<li>
				<p class="navbar-text">
					<span title="Year">{{ gameview.year }}</span>
					<span title="Month">{{ gameview.month }}</span>
					<span class="icon ress-sprite ress-sprite-8-4"></span>
				</p>
			</li>
		</ul>
	</div>
</nav>
</div>

{% endblock %}